{
    "name": "Python Dev Container",
    "dockerFile": "Dockerfile",
    "context": ".",
    "runArgs": [
        "--env",
        "DEBIAN_FRONTEND=noninteractive"
    ],
    "extensions": [
        "ms-python.python"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "pip install --upgrade pip && pip install flake8"
}